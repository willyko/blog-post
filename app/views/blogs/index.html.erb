<h1> Welcome to MY BLOG </h1>
<div class="col-md-10">
<table class=".table">
<% @blog_posts.each do | blog_post | %>
  <tr>
    <h2>
      <%=blog_post.title%>
    </h2>
    <%= blog_post.created_at.asctime %>
    <br>
    <%= blog_post.body %>
    <br>
    <%= link_to "Comments #{blog_post.comments.count}", blog_post%>
  </tr>
<% end %>
</table>
</div>
<div class="col-md-2">
  <h2> Tags </h2>
  <b>
    <% @tags.each do | tag | %>
      <%= link_to "##{tag.name}", blog_posts_path(tag_filter: "#{tag.name}")  %> 
    <% end %>
  </b>
</div>

